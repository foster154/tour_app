<section class="agent-info">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2>Presented By</h2>
				<div class="header-deveider"></div>
				<% unless @tour_agent.user_image.blank? %>
					<%= image_tag @tour_agent.user_image.url(:square), class: "agent-photo" %>
				<% end %>
				<span class="agent-name"><%= @tour_agent.full_name %></span>
				<span class="agent-company"><em><%= @tour_agent.company %></em></span>
				<span class="agent-contact-info">
					<% if @tour_agent.phone %>
						<%= "#{@tour_agent.phone} |" %>
					<% end %>
						
					<% if @tour_agent.email %>
						<%= mail_to @tour_agent.email, "Email" %> |
					<% end %>

					<% if @tour_agent.website %>
						<a href="<%= @tour_agent.website.to_s %>">Website</a>
					<% end %>
				</span>

			</div>
		</div>
	</div>
</section>