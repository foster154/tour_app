<% unless @tour.user.user_image.blank? %>
	<%= image_tag @tour.user.user_image.url(:square), class: "agent-photo" %>
<% end %>

<span class="agent-name"><%= "#{@tour.user.first_name} #{@tour.user.last_name}" %></span>
<span class="agent-company"><em><%= @tour.user.company %></em></span>

<span class="agent-contact-info">
	<% if @tour.user.phone %>
		<%= "#{@tour.user.phone} |" %>
	<% end %>
		
	<%= mail_to @tour.user.email, "Email" %> |

	<% if @tour.user.user_url %>
		<a href="<%= @tour.user.user_url.to_s %>">Website</a>
	<% end %>
</span>
