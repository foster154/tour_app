			<% @photos.each do | photo | %>
				<!-- SLIDE  -->
				<li data-transition="scaledownfromleft" data-slotamount="default" data-easein="default" data-easeout="default" data-masterspeed="1500" data-thumb="<%= photo.upload.url(:thumb).to_s %>" data-rotate="0" data-fstransition="fade" data-fsmasterspeed="1500" data-fsslotamount="7" data-saveperformance="off" data-title="" data-param1="" data-param2="" data-description="">
