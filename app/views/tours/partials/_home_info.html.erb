<div class="container">
	<div class="row">

		<%= bootstrap_form_for(@tour, :html => { :multipart => true }) do |f| %>
			<%= render 'shared/tour_error_messages' %>

			<div class="col-md-4">
					<h2 class="center">Address:</h2>
					<br />
					<%= f.text_field :address, hide_label: true, placeholder: 'Street Address', required: true %>
					<%= f.text_field :city, layout: :inline, hide_label: true, placeholder: 'City' %>
					<%= f.select :state, [
				      ['(select)', ' '],
				      ['Alabama', 'AL'],
				      ['Alaska', 'AK'],
				      ['Arizona', 'AZ'],
				      ['Arkansas', 'AR'],
				      ['California', 'CA'],
				      ['Colorado', 'CO'],
				      ['Connecticut', 'CT'],
				      ['Delaware', 'DE'],
				      ['District of Columbia', 'DC'],
				      ['Florida', 'FL'],
				      ['Georgia', 'GA'],
				      ['Hawaii', 'HI'],
				      ['Idaho', 'ID'],
				      ['Illinois', 'IL'],
				      ['Indiana', 'IN'],
				      ['Iowa', 'IA'],
				      ['Kansas', 'KS'],
				      ['Kentucky', 'KY'],
				      ['Louisiana', 'LA'],
				      ['Maine', 'ME'],
				      ['Maryland', 'MD'],
				      ['Massachusetts', 'MA'],
				      ['Michigan', 'MI'],
				      ['Minnesota', 'MN'],
				      ['Mississippi', 'MS'],
				      ['Missouri', 'MO'],
				      ['Montana', 'MT'],
				      ['Nebraska', 'NE'],
				      ['Nevada', 'NV'],
				      ['New Hampshire', 'NH'],
				      ['New Jersey', 'NJ'],
				      ['New Mexico', 'NM'],
				      ['New York', 'NY'],
				      ['North Carolina', 'NC'],
				      ['North Dakota', 'ND'],
				      ['Ohio', 'OH'],
				      ['Oklahoma', 'OK'],
				      ['Oregon', 'OR'],
				      ['Pennsylvania', 'PA'],
				      ['Puerto Rico', 'PR'],
				      ['Rhode Island', 'RI'],
				      ['South Carolina', 'SC'],
				      ['South Dakota', 'SD'],
				      ['Tennessee', 'TN'],
				      ['Texas', 'TX'],
				      ['Utah', 'UT'],
				      ['Vermont', 'VT'],
				      ['Virginia', 'VA'],
				      ['Washington', 'WA'],
				      ['West Virginia', 'WV'],
				      ['Wisconsin', 'WI'],
				      ['Wyoming', 'WY']
				    ], layout: :inline, hide_label: true
				%>
				<%= f.text_field :zip, layout: :inline, hide_label: true, placeholder: 'Zip' %>

				<br />

			</div>

			<div class="col-md-4">
				<h2 class="center">Description:</h2>
				<br />
				<%= f.text_area :description, size: "24x10", hide_label: true %>
			</div>

			<div class="col-md-4" id="field-group-padding">
				<h2 class="center">Other Info:</h2>
				<br />
				<%= f.text_field :price, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6" %>
				<%= f.text_field :beds, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6" %>
				<%= f.text_field :baths, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6" %>
				<%= f.number_field :home_size, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6", label: "Home Size (sq ft)" %>
				<%= f.text_field :lot_size, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6", label: "Lot Size (acres)" %>
				<%= f.text_field :year_built, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6" %>
			</div>
		</div>

		<br />

		<!-- REAL ESTATE AGENT INFO -->
		<div class="col-md-6">
			<h2 class="grey"><i class="fa fa-user icon-pad"></i>Listing Agent:</h2>
			<div class="float-right">
			      <%= link_to "Add New Agent", new_agent_path, target: "_blank" %>
			</div>
			<%= f.collection_select :agent_id, current_user.agents.all, :id, :full_name, {include_blank: "#{current_user.first_name} #{current_user.last_name} (use my info)"} %>
		</div>

		<!-- PHOTOGRAPHER INFO -->
		<div class="col-md-6">
			<h2 class="grey"><i class="fa fa-camera icon-pad"></i>Photographer Info:</h2>
			<%= f.collection_select :photographer_id, current_user.agents.all, :id, :full_name, {include_blank: "#{current_user.first_name} #{current_user.last_name} (use my info)"} %>
			<%= f.check_box :show_photographer_info, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6", label: 'Include "Photo Info" icon/information' %>
		</div>

		<div class="tour-instructions-box mar-top30">
			<i class="fa fa-user"></i>The "branded" tour will include the listing real estate agent's information.<br>
		  <i class="fa fa-map-marker"></i>Maps are generated automatically based on the address. If you need to correct a map location, please contact <a href="mailto:support@showandtour.com">support@showandtour.com</a>.
		</div>

		<br />

		<div class="row">
			<div class="center">
				<%= f.submit "Save Tour Info", class: "btn btn-large btn-primary", :'data-no-turbolink' => "true" %>
			</div>

		<% end %>
	</div> <!-- /.row -->
</div> <!-- /.container -->
