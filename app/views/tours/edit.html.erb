<% provide(:title, 'Edit Tour') %>

<div class="container-fluid">
	<h1><%= @tour.address %></h1>
	<hr />
	<div class="row tour-edit-subhead">
		<div class="col-sm-1 col-xs-offset-1 margin-top">
			<%= link_to "<- Back to All Tours", tours_path(user_id: @tour.user_id), class: "btn" %>
		</div>

		
		<div class="col-sm-6 col-sm-offset-4">
			<div class="row">
			<div class="col-xs-4">
				<h2>View Tour:</h2>
			</div>
			<div class="col-xs-8 mar-top15">
				<% if @tour.inactive %>
				<div class="tour-links-inactive">
					(tour is currently set as inactive)
				</div>
				<% elsif @tour.photos.any? %>
				<div class="tour-link">Unbranded: <%= link_to "http://www.showandtour.com/tours/#{@tour.id}", tour_path(@tour.id), :target => '_blank' %></div>
				<div class="tour-link">Branded: <%= link_to "http://www.showandtour.com/tours/b/#{@tour.id}", "/tours/b/#{@tour.id}", :target => '_blank' %></div>
				<% else %>
				<div class="mar-top15">Add photos below in order to view the tour!</div>
				<% end %>
			</div>
			</div>
		</div>
	</div>
	<hr />


	<div class="row tour-edit-body">

		<div class="col-md-10 col-md-offset-1">

  <!-- Nav tabs -->
  <ul class="nav nav-pills tour-edit-tabs" role="tablist">
    <li role="presentation" class="active">
    	<a href="#home" aria-controls="home" role="tab" data-toggle="pill">
    		<i class="fa fa-home icon-pad"></i>Listing Info
    	</a>
    </li>
    <li role="presentation">
    	<a href="#photos" aria-controls="photos" role="tab" data-toggle="pill">
    		<i class="fa fa-photo"></i> Photos & Video
    	</a>
    </li>
    <li role="presentation">
    	<a href="#settings" aria-controls="settings" role="tab" data-toggle="pill">
    		<i class="fa fa-cog icon-pad"></i>Settings
    	</a>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
    	<%= render 'tours/partials/home_info' %>
    </div>

    <div role="tabpanel" class="tab-pane" id="photos">
			<%= render 'tours/partials/photos' %>
    </div>

    <div role="tabpanel" class="tab-pane" id="settings">
    	<%= render 'tours/partials/tour_settings' %>
    </div>
  </div>

</div>


	</div>
</div> <!-- /.container-fluid -->