<% provide(:title, 'Edit Tour') %>

<div class="container-fluid">
	<h1><%= @tour.address %></h1>
	<hr />
	<div class="row tour-edit-subhead">
		<div class="col-sm-1 col-xs-offset-1 margin-top">
			<%= link_to "<- Back to All Tours", tours_path(user_id: @tour.user_id), class: "btn" %>
		</div>

		
		<div class="col-sm-6 col-sm-offset-4">
			<div class="row">
			<div class="col-xs-4">
				<h2>View Tour:</h2>
			</div>
			<div class="col-xs-8 margin-top">
				<% if @tour.inactive %>
				<div class="tour-links-inactive">
					(tour is currently set as inactive)
				</div>
				<% elsif @tour.photos.any? %>
				<div class="tour-link">Unbranded: <%= link_to "http://www.tourapp.com/tours/#{@tour.id}", tour_path(@tour.id), :target => '_blank' %></div>
				<div class="tour-link">Branded: <%= link_to "http://www.tourapp.com/tours/b/#{@tour.id}", "/tours/b/#{@tour.id}", :target => '_blank' %></div>
				<% else %>
				<div class="margin-top15">Add photos below in order to view the tour!</div>
				<% end %>
			</div>
			</div>
		</div>
	</div>
	<hr />


	<div class="row tour-edit-body">

		<!-- Begin 'Tour Info' Column -->

		<div class="col-md-4 col-md-offset-1">
			<h2 class="grey"><i class="fa fa-home icon-pad"></i>Home Info:</h2>
			<%= bootstrap_form_for(@tour, :html => { :multipart => true }) do |f| %> <!-- TOUR INFO FORM -->
				<%= render 'shared/tour_error_messages' %>
				<%= f.submit "Save", class: "btn btn-large btn-primary float-right" %>
				<div style="clear:both;">
					<%= render 'form', f: f %>
				</div>
				<%= f.submit "Save", class: "btn btn-large btn-primary margin-top float-right" %>
			<% end %>
		</div>

		<!-- Begin 'Photos' Column -->

		<div class="col-md-6 col-md-offset-1">
			<h2 class="grey">Add Photos:</h2>
			<%= render 'tours/partials/photo_upload' %>
			<br />

			<h2 class="grey">Current Photos:</h2>
			<%= render 'tours/partials/photo_list' %>

		</div>
	</div>
</div> <!-- /.container-fluid -->