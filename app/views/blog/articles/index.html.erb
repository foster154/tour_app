<div class="page-header-cover"></div>
<h1 class="page-header-title">Blog</h1>

<div class="container">
  <% @articles.each do |article| %>
    <article>
      <h2>
        <%= link_to article.title, blog_article_path(article) %>
      </h2>
      <%= render partial: "meta", locals: { article: article } %>
      <%= markdown article.excerpt %>
      <% if article.has_more_text? %>
        <p>
          <%= link_to "Continue reading â†’", blog_article_path(article) %>
        </p>
      <% end %>
    </article>
    <hr>
  <% end %>
</div>